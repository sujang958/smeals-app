{
  "functions": {
    "predeploy": "npm --prefix \"$RESOURCE_DIR\" run build"
  },
  "hosting": {
    "public": "public",
    "rewrites": [
      {
        "source": "/v1/**",
        "function": "V1"
      },

      {
        "source": "/v2/graphql",
        "function": "V2_GRAPHQL"
      },
      {
        "source": "/v2/**",
        "function": "V2_REST"
      }
    ]
  },
  "emulators": {
    "hosting": {
      "port": "3000"
    }
  }
}
